	#include <bits/stdc++.h>
	using namespace std;
	void solve()
	{
	    int l,r;
	    cin>>l>>r;
	    if(r % 2 == 1) r--;
	    long long ans =log2(r);
	    cout<<ans<<endl;
	}
	
	 int main()
	{
	    int t = 1;
	    cin >> t;
	    for (int i = 1; i <= t; i++)
	    {
	        solve();
	    }
	    return 0;
	}
